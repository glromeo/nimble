{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "downlevelIteration": true,
    "rootDir": ".",
    "noEmit": false,
    "sourceMap": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@nimble/toolkit",
    "paths": {
      "nimble": [
        "{{it.node_modules}}/@nimble/toolkit"
      ],
      "@nimble/toolkit": [
        "{{it.node_modules}}/@nimble/toolkit"
      ],
      "@nimble/toolkit/*": [
        "{{it.node_modules}}/@nimble/toolkit/*"
      ]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs"
    }
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/node_modules"
  ]
}
